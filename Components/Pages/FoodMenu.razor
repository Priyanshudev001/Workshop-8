﻿@page "/foodmenu"
@layout ProductLayout

<h2 class="mb-4 text-center">Food Menu</h2>

<div class="text-center mb-4">
    <button class="btn btn-outline-primary me-2" @onclick="SortByName">
        Sort by Name
    </button>

    <button class="btn btn-outline-success" @onclick="SortByPrice">
        Sort by Price
    </button>
</div>

<div class="d-flex flex-wrap justify-content-center gap-3">
    @foreach (var item in items)
    {
        <ItemCard
            Name="@item.Name"
            Ingredients="@item.Ingredients"
            Price="@item.Price"
            ImageUrl="@item.ImageUrl" />
    }
</div>

@code {
    private List<Item> items = new()
    {
        new Item { Name="Momo", Ingredients="Chicken, Flour, Spices", Price=180, ImageUrl="images/momo.jpg" },
        new Item { Name="Pizza", Ingredients="Cheese, Tomato, Dough", Price=450, ImageUrl="images/pizza.jpg" },
        new Item { Name="Burger", Ingredients="Bun, Patty, Lettuce", Price=250, ImageUrl="images/burger.jpg" },
        new Item { Name="Pasta", Ingredients="Pasta, Sauce, Herbs", Price=320, ImageUrl="images/pasta.jpg" },
        new Item { Name="Fried Rice", Ingredients="Rice, Vegetables, Soy Sauce", Price=220, ImageUrl="images/friedrice.jpg" }
    };

    private void SortByPrice()
    {
        items = items.OrderBy(i => i.Price).ToList();
    }

    private void SortByName()
    {
        items = items.OrderBy(i => i.Name).ToList();
    }

    private class Item
    {
        public string Name { get; set; } = string.Empty;
        public string Ingredients { get; set; } = string.Empty;
        public decimal Price { get; set; }
        public string ImageUrl { get; set; } = string.Empty;
    }
}